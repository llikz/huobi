<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_25">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@mipmap/head"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_padding"
                    android:text="姓名"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/title_bar" />

                <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_padding"
                    android:text="职位"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginBottom="@dimen/dp_36">
                    <ImageView
                        android:id="@+id/type_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/exception_type"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exception_type"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/type_iv"/>
                </RelativeLayout>
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/home_div_bg"/>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginBottom="@dimen/dp_36">
                    <ImageView
                        android:id="@+id/work_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/done_work"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/done_work"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/work_iv"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/tv_massess"
                style="@style/style_user_detail_item"
                android:drawableLeft="@mipmap/temp_storage"
                android:text="@string/temp_storage" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/style_user_detail_item"
                android:drawableLeft="@mipmap/feedback"
                android:text="@string/user_callback" />

            <TextView
                android:id="@+id/tv_about"
                style="@style/style_user_detail_item"
                android:drawableLeft="@mipmap/about"
                android:text="@string/user_about" />

            <TextView
                android:id="@+id/tv_setting"
                style="@style/style_user_detail_item"
                android:drawableLeft="@mipmap/setting"
                android:text="@string/user_set" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>