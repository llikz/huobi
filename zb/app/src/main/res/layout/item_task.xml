            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/area_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@string/area_name"
                style="@style/style_text_content_light"
                />
            <TextView
                android:id="@+id/area_name_div"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/area_div_bg"
                android:layout_toRightOf="@id/area_name_tv"
                />
            <TextView
                android:id="@+id/area_name_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@string/area_name"
