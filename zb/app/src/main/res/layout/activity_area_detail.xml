<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <cn.grass.gate.widgets.TopView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_header_height"
        android:background="@color/colorPrimary"
        app:left_drawable="@mipmap/imageselector_back"
        app:left_show="both"
        app:left_text="返回"
        app:right_show="none"
        app:title_text=""
        app:title_text_color="@color/color_white" />

    <LinearLayout
        android:layout_below="@id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_name_colon"
            style="@style/style_text_content_light"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_2"
            android:id="@+id/area_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_text_content_light"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/color_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name_colon"
                style="@style/style_text_content_light"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_light"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/color_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_phone_colon"
                style="@style/style_text_content_light"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/user_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_light"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/color_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_no_colon"
                style="@style/style_text_content_light"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/user_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_light"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/color_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asset_no_colon"
                style="@style/style_text_content_light"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/asset_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_light"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/color_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"/>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_addr_colon"
                style="@style/style_text_content_light"/>

            <TextView
                android:id="@+id/navigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_blue"
                android:text="@string/navigate"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/user_addr_tv"
                android:layout_toRightOf="@id/user_addr"
                android:layout_toLeftOf="@+id/navigate"
                android:layout_margin="@dimen/dp_2"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_light"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_margin"
            android:background="@color/color_bg"
            android:layout_alignParentBottom="true"
           />
        <RelativeLayout
            android:id="@+id/user_detail_ll"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_user_detail"
                style="@style/style_text_content_light"/>
            <ImageView
                android:id="@+id/navigate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_text_content_blue"
                android:src="@mipmap/icon_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                />
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_bg">
            <Button
                android:layout_marginTop="@dimen/dp_25"
                android:id="@+id/write_table_bt"
                style="@style/style_primary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/write_table" />

            <Button
                android:id="@+id/exception_type_bt"
                style="@style/style_empty_primary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exception_type" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>