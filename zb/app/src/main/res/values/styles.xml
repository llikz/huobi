<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="weedStyle" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeWhite" parent="weedStyle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_white</item>
    </style>
    <style name="AppThemeGray" parent="weedStyle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_bbb</item>
        <item name="colorPrimaryDark">@color/color_bbb</item>
        <item name="colorAccent">@color/color_bbb</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/color_666</item>
        <item name="android:textColor">@color/color_white</item>
         <item name="colorAccent">@color/color_white</item>

    </style>

    <style name="customDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progressDialog" parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right_left_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_left_out</item>
    </style>

    <style name="style_blue_btn" parent="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/shape_btn_primary</item>
    </style>


    <style name="style_empty_green_btn" parent="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_padding</item>
        <item name="android:layout_marginTop">@dimen/layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/layout_padding</item>
        <item name="android:layout_marginRight">@dimen/layout_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/shape_input_bg</item>
    </style>

    <style name="MyDialogAnimation">
        <!--进入 -->
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!--退出-->
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="textviewstyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@drawable/selector_toggle_text</item>
        <item name="android:textSize">@dimen/input_size_16</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <!--指定一些属性-->
    </style>

    <!--首页下方tap文字-->
    <style name="index_bottom_btn_nav" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/selector_nav_text</item>
        <item name="android:textSize">@dimen/content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@null</item><!--去掉默认水波纹在第一次进入主界面时水波纹不消失的问题-->
    </style>

    <!--首页下方tap红点-->
    <style name="style_tab_bottom_msg_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/input_size_8</item>
        <item name="android:background">@drawable/shape_round_small_red</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="style_user_detail_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/icon_arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:padding">@dimen/layout_max_padding</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/content</item>
        <item name="android:textColor">@color/color_999</item>
    </style>

    <style name="style_user_detail_function_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_999</item>
        <item name="android:textSize">@dimen/content</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:padding">@dimen/layout_max_padding</item>
    </style>

    <style name="style_text_content_title_padding">
        <item name="android:textColor">@color/color_content_light</item>
        <item name="android:textSize">@dimen/content</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
    </style>
    <style name="style_text_content_light">
        <item name="android:textColor">@color/color_content_light</item>
        <item name="android:textSize">@dimen/content</item>
    </style>
    <style name="style_text_content_dark">
        <item name="android:textColor">@color/color_content_dark</item>
        <item name="android:textSize">@dimen/content</item>
    </style>
    <style name="style_text_content_light_more">
        <item name="android:textColor">@color/color_content_light_more</item>
        <item name="android:textSize">@dimen/content</item>
    </style>
    <style name="style_text_content_yellow">
        <item name="android:textColor">@color/color_content_yellow</item>
        <item name="android:textSize">@dimen/content</item>
    </style>
    <style name="style_text_content_blue">
        <item name="android:textColor">@color/color_content_blue</item>
        <item name="android:textSize">@dimen/content</item>
    </style>

    <style name="style_primary_btn" parent="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_padding</item>
        <item name="android:layout_marginTop">@dimen/layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/layout_padding</item>
        <item name="android:layout_marginRight">@dimen/layout_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/shape_btn_primary</item>
    </style>

    <style name="style_empty_primary_btn" parent="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_padding</item>
        <item name="android:layout_marginTop">@dimen/layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/layout_padding</item>
        <item name="android:layout_marginRight">@dimen/layout_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/shape_input_bg</item>
    </style>
</resources>
